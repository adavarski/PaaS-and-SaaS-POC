    protocol   = "tcp"
    rule_no    = 130
    action     = "allow"
    cidr_block = "0.0.0.0/0"
    from_port  = 11500
    to_port    = 11500
  }

   egress {
    protocol   = "tcp"
    rule_no    = 130
    action     = "allow"
    cidr_block = "0.0.0.0/0"
    from_port  = 11500
    to_port    = 11500
  }

  #----------------------------------------------------------
  #                          ORCHESTRATOR.API
  #----------------------------------------------------------
  ingress {
    protocol   = "tcp"
    rule_no    = 140
    action     = "allow"
    cidr_block = "0.0.0.0/0"
    from_port  = 11501
    to_port    = 11501
  }

   egress {
    protocol   = "tcp"
    rule_no    = 140
    action     = "allow"
    cidr_block = "0.0.0.0/0"
    from_port  = 11501
    to_port    = 11501
  }

  #----------------------------------------------------------
  #                          GRAFANA
  #----------------------------------------------------------
  ingress {
    protocol   = "tcp"
    rule_no    = 150
    action     = "allow"
    cidr_block = "0.0.0.0/0"
    from_port  = 3000
    to_port    = 3000
  }

   egress {
    protocol   = "tcp"
    rule_no    = 150
    action     = "allow"
    cidr_block = "0.0.0.0/0"
    from_port  = 3000
    to_port    = 3000
  }

  #----------------------------------------------------------
  #                          KIBANA
  #----------------------------------------------------------
  ingress {
    protocol   = "tcp"
    rule_no    = 160
    action     = "allow"
    cidr_block = "0.0.0.0/0"
    from_port  = 5601
    to_port    = 5601
  }

   egress {
    protocol   = "tcp"
    rule_no    = 160
    action     = "allow"
    cidr_block = "0.0.0.0/0"
    from_port  = 5601
    to_port    = 5601
  }

  #----------------------------------------------------------
  #                          ELASTICSEARCH
  #----------------------------------------------------------
  ingress {
    protocol   = "tcp"
    rule_no    = 170
